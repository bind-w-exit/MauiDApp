<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="MauiDApp.AppShellDesktop"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiDApp"
    xmlns:views="clr-namespace:MauiDApp.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home" FlyoutIcon="home_outline.png">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>
    <FlyoutItem Title="Search" FlyoutIcon="search.png">
        <ShellContent ContentTemplate="{DataTemplate views:SearchPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Upload" FlyoutIcon="cloud_upload_outline.png">
        <ShellContent ContentTemplate="{DataTemplate views:UploadArtworkPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Notification" FlyoutIcon="bell_outline.png">
        <ShellContent ContentTemplate="{DataTemplate views:NotificationPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Profile" FlyoutIcon="person_outline.png">
        <ShellContent ContentTemplate="{DataTemplate views:MyProfilePage}" />
    </FlyoutItem>

</Shell>